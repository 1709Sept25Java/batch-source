<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>FrontControllerDemo</display-name>
  
  <context-param>
  	<param-name>Where are we?</param-name>
  	<param-value>In the Woods.</param-value>
  </context-param>
  
  <servlet>
  	<servlet-name>master</servlet-name>
  	<servlet-class>com.revature.MasterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>master</servlet-name>
  	<url-pattern>/home</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>bear</servlet-name>
  	<servlet-class>com.revature.BearServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>bear</servlet-name>
  	<url-pattern>/bear</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>cave</servlet-name>
  	<servlet-class>com.revature.CaveServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>cave</servlet-name>
  	<url-pattern>/cave</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>error</servlet-name>
  	<servlet-class>com.revature.ErrorServlet</servlet-class>
  	<init-param>
  		<param-name>message</param-name>
  		<param-value>Not a Valid Destination</param-value>
  	</init-param>
  </servlet>
  <servlet-mapping>
  	<servlet-name>error</servlet-name>
  	<url-pattern>/error</url-pattern>
  </servlet-mapping>
  
</web-app>