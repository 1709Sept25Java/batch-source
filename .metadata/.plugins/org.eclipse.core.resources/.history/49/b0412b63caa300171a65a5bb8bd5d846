package com.revature.corejava;

public class Q13_TrianglePrint {
	
	public static void print() {
		int character = 1;
		for(int j = 1; j<4; j++) {
			for (int i = 0; i<j; i++) {
				if(character == 1) {
					character = 0;
					System.out.print(character);
					continue;
				}
				if(character == 0) {
					character = 1;
					System.out.print(character);
				}
			}
			System.out.println();
		}
	}

	public static void main(String[] args) {
		print();
	}
}
