package com.revature.corejavaQ1;

public class Q3_ReverseString {
	
	public static void main(String[] args) {
		
	}
	
	public static void stringReverse(String str) {
		char[] stringArray = new char[str.length()];
		for (int i = 0; i<str.length(); i++) {
			stringArray[i] = str.charAt(i);
		}
		int swapChars;
		if (str.length()%2 == 0) {
			swapChars = str.length()/2;
		}
		else {
			swapChars = (str.length()-1)/2;
		}
		char[] swappedArray = new char[str.length()];
		for (int j = 0; j<swapChars, j++) {
			swappedArray[j]=stringArray[str.length()-j];
		}
		Q1_BubbleSort.printArray(swappedArray);
	}
}
