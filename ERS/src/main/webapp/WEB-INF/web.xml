<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>ERS</display-name>
        
	   <welcome-file-list>
   		<welcome-file>views/Login.html</welcome-file>
	</welcome-file-list>
	  
	  <servlet>
	  	<servlet-name>login</servlet-name>
	  	<servlet-class>com.revature.servlets.UserLoginServlet</servlet-class>
	  </servlet>
	  <servlet-mapping>
	  	<servlet-name>login</servlet-name>
	  	<url-pattern>/login</url-pattern>
	  </servlet-mapping>
	  
	  <servlet>
	  	<servlet-name>managerhomepage</servlet-name>
	  	<servlet-class>com.revature.servlets.ManagerHomePageServlet</servlet-class>
	  </servlet>
	  <servlet-mapping>
	  	<servlet-name>managerhomepage</servlet-name>
	  	<url-pattern>/managerhomepage</url-pattern>
	  </servlet-mapping>
	  
	  <servlet>
	  	<servlet-name>employeehomepage</servlet-name>
	  	<servlet-class>com.revature.servlets.EmployeeHomePageServlet</servlet-class>
	  </servlet>
	  <servlet-mapping>
	  	<servlet-name>employeehomepage</servlet-name>
	  	<url-pattern>/employeehomepage</url-pattern>
	  </servlet-mapping>
  
</web-app>